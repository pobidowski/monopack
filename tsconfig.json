{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts", "package.json"],
  "include": ["src"]
}
